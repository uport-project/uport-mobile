    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "lib/utilities/__tests__/mock_native_module.js",
      "lib/helpers/"
    ],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "lib/**/*.js",
      "lib/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "lib/contracts/",
      "lib/browserified/",
      "-test",
      "lib/kancha/"
    ],
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js|jsx)"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@kancha": "<rootDir>/lib/kancha/index",
      "uPortMobile(.*)$": "<rootDir>$1"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "testEnvironment": "node",
    "coverageDirectory": "./coverage/",
    "collectCoverage": false
  },
